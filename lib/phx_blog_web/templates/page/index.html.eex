<div class="container">
  <div class="card-columns">
    <%= for post <- @posts do %>
      <div class="card">
        <img class="card-img-top" src="<%= PhxBlog.Cover.url({post.cover, post}) %>" alt="cover">
        <div class="card-body">
          <h5 class="card-title"><%= link post.title, method: "get", to: Routes.page_path(@conn, :show, post.id) %></h5>
          <p class="card-text"><%= post_excerpt(post) %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
